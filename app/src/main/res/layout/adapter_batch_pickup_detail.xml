<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/batch_pickup_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/picklist_linearlayout_bg"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/GoodsCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFC54646"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/GoodsBarCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFC54646" />

            <TextView
                android:id="@+id/GoodsCustomerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFC54646" />

            <TextView
                android:id="@+id/GoodsModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFC54646" />

            <TextView
                android:id="@+id/GoodsColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFC54646" />

            <TextView
                android:visibility="gone"
                android:id="@+id/GoodsNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFC54646" />
        </LinearLayout>

      
    </LinearLayout>

     
</LinearLayout>